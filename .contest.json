{
  "actions": [
    {
      "type": "test-all",
      "run": "make test-go"
    },

    {
      "type": "test-file",
      "files": "**/*.feature",
      "run": "go test -- {{file}}"
    },

    {
      "type": "test-file-line",
      "files": "**/*.feature",
      "run": "make cukethis"
    },

    {
      "type": "test-file",
      "files": "**/*_test.go",
      "run": "go test {{file}}"
    }
  ],
  "options": {
    "beforeRun": {
      "clearScreen": true
    },
    "afterRun": {
      "newlines": 1,
      "indicatorLines": 3,
      "indicatorBackground": true,
      "printResult": false
    }
  }
}
