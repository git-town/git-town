#!/usr/bin/env bash
set -e

if [ -n "$(goimports -d src 2>&1)" ]; then
  echo "Code is not formatted. Run 'goimports -w src'"
  exit 1
fi

# Disabled linters:
# - https://github.com/GoASTScanner/gas: not production-ready at this point
# - https://godoc.org/golang.org/x/tools/cmd/gotype duplicated by install / build
gometalinter.v1 -D gas -D gotype -D gotypex src/...
