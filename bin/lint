#!/usr/bin/env bash
set -e

# Exluded rules
#
# https://github.com/koalaman/shellcheck/wiki/SC1090
#   We aready run shellcheck on all our source files
#
# https://github.com/koalaman/shellcheck/wiki/SC2155
#   Bloats the code

find bin src -type f ! -name 'README.md' -print0 | xargs -0 shellcheck --exclude="SC1090,SC2155"
