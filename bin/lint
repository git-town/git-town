#!/usr/bin/env bash
set -e

# Exluded rules (see https://github.com/koalaman/shellcheck/wiki/)
#
# SC1090: we aready run shellcheck on all our source files
# SC2155: would bloat the code base
# SC2162: read -r option not available on Mac OSX 10.10

exclude="SC1090,SC2155,SC2162"

find bin src -type f ! -name 'README.md' -print0 | xargs -0 shellcheck --exclude="$exclude"
