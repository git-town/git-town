$hero-width = 960px
$section-padding = 60px

body.index
  section
    cf()
    padding: $section-padding 0

    h2
      text-transform: uppercase
      margin: 10px 0 20px
      letter-spacing: 3px
      font-weight: bold
      color: $accent
      text-align: center

  section.hero
    padding: 120px 0
    background-image: url('../img/hero.jpg')
    background-repeat: no-repeat
    background-size: cover
    background-position: center center

    .container
      cf()
      max-width: $hero-width
      margin: 0 auto

    .left
      float: left
      width: $hero-width - 550px
      padding-right: 20px
      color: #000

      img
        width: 90%

      h2
        text-align: left
        margin-top: 20px
        color: #000
        font-size: 22px

      p
        margin-top: 0
        line-height: 1.7

      i
        margin-left: 0.5em

      .check-it
        text-align: right
        text-transform: uppercase
        color: $accent
        margin-top: 40px
        padding-right: 40px

      .buttons
        .commands
          margin-left: 20px

    .welcome
      text-align: center
      margin-bottom: 40px

      img
        width: 500px

    .terminal
      float: right

    .intro-video
      border: 1px solid #000

  section.tagline
    background-color: #fff
    text-align: center
    color: $black
    padding: ($section-padding + 20px) 0

    h2
      color: $accent

    p
      display: block
      max-width: 840px
      margin: 0 auto
      line-height: 1.8
      margin-bottom: 20px

      a
        text-decoration: none

    .buttons
      margin-top: 27px

    a.learn-more
      margin-left: 20px


  section.commands
    padding: 80px 0 50px 0
    background-color: $accent
    color: #fff
    box-shadow: inset 0 -260px 0 0 $body-bg
    text-align: center

    h2
      text-align: center
      color: #fff
      text-transform: uppercase
      line-height: 1

    p
      margin: 0
      padding-bottom: 40px
      font-weight: light

    .commands
      cf()
      margin: 0 auto
      background-color: #fff
      color: $black

      .command
        box-sizing: border-box
        width: 25%
        min-width: 230px
        height: 230px
        float: left
        border-left: 1px solid darken(#fff, 5)

        :hover
          background-color: #ddd

        &:first-child
          border-left: 0

      h3
        color: #000
        text-align: left
        text-indent: 20px
        font-family: monospace
        padding-top: 20px

      p
        padding: 20px
        text-align: left

    a.view-more
      color: #fff
      margin: 40px 0 20px 0

  section.faq
    padding-right: 15%
    padding-left: 15%
    background-color: #fff

    h2
      margin-bottom: 40px

    h3
      margin-top: 40px
      font-size: 18px
      position: relative

      &:before
        content: "?"
        position: absolute
        font-size: 14px
        right: 101%
        top: 1px
        color: #bbb
        border-radius: 100%
        width: 20px
        height: 20px
        line-height: 20px
        border: 3px solid #bbb
        text-align: center
    p
      margin-bottom: 10px

    .buttons
      text-align: center
      margin-top: 45px

      .twitter
        margin-left: 20px

        &:before
          font-size: 1.5em
          margin-right: 4px

    a.learn-more
      color: #fff
      margin: 0 auto

  section.town
    text-align: center

    img
      width: 90%
      max-width: 670px


@media (min-width: ($break-sml + 1px)) and (max-width: $break-med)
  body.index
    section.commands
      .commands
        .command
          width: 50%

@media (max-width: $break-sml)
  body.index
    section.tagline, section.commands
      padding-right: 20px
      padding-left: 20px

    section.tagline .buttons
      a
        display: inline-block
        width: auto
        float: none
        margin: 15px

    section.commands
      .commands
        .command
          width: 100%

    section.faq
      .buttons a
        margin: 15px

@media (max-width: $break-med)
  body.index
    section.hero
      .left
        text-align: center
        display: block
        width: auto
        float: none
        padding: 0
        margin-bottom: 30px

        h2
          text-align: center

      iframe
        display: block
        margin: 0 auto
        width: 100%
        max-width: 550px
