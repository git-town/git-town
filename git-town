#!/bin/bash
source "$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/helpers/helpers.sh"

function show_config {
  echo "Main branch: '$(get_configuration "main-branch-name")'"
  echo "Non-feature branches: '$(get_configuration "non-feature-branch-names")'"
}

function show_version {
  echo "Git Town 0.4.1"
}


if [ "$1" == "--config" ]; then
  show_config
elif [ "$1" == "--version" ]; then
  show_version
fi
