#!/usr/bin/env bash
source "$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/helpers/helpers.sh"


function ensure_has_upstream {
  if [ "$(git remote -v | grep -c 'upstream')" == 0 ]; then
    echo_error_header
    echo_error "Please add a remote 'upstream'"
    exit_with_error newline
  fi
}


function preconditions {
  ensure_has_upstream
  export STASH_OPEN_CHANGES=true
}


function steps {
  step "checkout_main_branch"
  step "fetch_upstream"
  step "rebase upstream/$MAIN_BRANCH_NAME"
  step "push_branch $MAIN_BRANCH_NAME"
  step "checkout $INITIAL_BRANCH_NAME"
}


run "$@"
