#!/bin/bash
source "$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/helpers/helpers.sh"


function add_steps {
  if [ "$initial_open_changes" = true ]; then
    add_step "stash_open_changes"
  fi

  add_step "checkout_main_branch"
  add_step "fetch_upstream"
  add_step "rebase upstream/$main_branch_name"
  add_step "push"
  add_step "checkout $initial_branch_name"

  if [ "$initial_open_changes" = true ]; then
    add_step "restore_open_changes"
  fi
}


function ensure_has_upstream {
  if [ "$(git remote -v | grep -c 'upstream')" == 0 ]; then
    echo_error_header
    echo_error "Please add a remote 'upstream'"
    exit_with_error
  fi
}


function preconditions {
  ensure_has_upstream
}


run "$@"
